{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@src": ["./src"],
      "@src/*": ["./src/*"],
      "@router/*": ["./src/router/*"],
      "@service": ["./src/service"],
      "@service/*": ["./src/service/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    },
  },
  "exclude": ["node_modules", "dist", "public"],
  "include": [
    "src/**/*",
  ]
}
